<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".audio.AudioActivity">
    <Button
        android:id="@+id/audio_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="playPCMVoice"
        android:onClick="playPCMVoice"/>

    <Button
        android:id="@+id/audio_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/audio_1"
        android:text="开始录制"
        android:onClick="recordPCMVoice"/>

</androidx.constraintlayout.widget.ConstraintLayout>